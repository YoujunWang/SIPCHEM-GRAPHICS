<UserControl x:Class="SIPMeOH_IS_views.BootStrap.ConnectedScreen"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
			 d:DesignWidth="800" 
			 Background="LightGray"
			 d:DesignHeight="600">
    <Grid>
        <Image Source="../Resources/StartPage.png" Stretch="Fill" />

        <RSIText HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     FontFamily="Arial black"
                     FontSize="30"
                     FontWeight="Bold"
                     Foreground="#FFD65013"
                     Text="SIPMeOH_IS_views" />

        <TextBlock Margin="0,95,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="Arial black"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#FFD65013"
                       Text="Connected, waiting for simulator" />

        <ProgressBar Width="200"
                         Height="20"
                         Margin="0,150,0,0"
                         IsIndeterminate="true" />

    </Grid></UserControl>